# In the repo root directory
# To build this : $ apptainer build --fakeroot --sandbox earth2mip.sif ./examples/earth2mip.def
# To run this: $ apptainer run --writable --nv earth2mip.sif jupyter-lab --no-browser --allow-root --ip=0.0.0.0 --port=8888 --NotebookApp.token="" --notebook-dir=/examples/

Bootstrap: docker
FROM: nvcr.io/nvidia/modulus/modulus:23.08

%files
earth2mip/* /code/earth2mip/earth2mip/
MANIFEST.in /code/earth2mip/MANIFEST.in
setup.cfg /code/earth2mip/setup.cfg
setup.py /code/earth2mip/setup.py
LICENSE.txt /code/earth2mip/LICENSE.txt

%environment

%post
    cd /code/earth2mip && pip install .
    pip3 install cartopy ecmwflibs h5netcdf
    pip3 install --upgrade nbconvert
    
    apt update
    apt install -y nodejs
    apt install -y npm
    
%files
    examples/notebooks/* /examples/notebooks/
    examples/workflows/* /examples/workflows/
    examples/README.md   /examples/README.md
    

%runscript
    "$@"

%labels
    AUTHOR NVIDIA Earth-2 and Modulus Team
